<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="3"
    android:rowCount="6"
    android:background="@color/DarkGray">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="January"
        android:id="@+id/button"
        android:layout_row="0"
        android:layout_column="0"

        android:layout_rowWeight="0.25"


        android:layout_columnWeight="0.25"
        android:layout_gravity="fill_horizontal"
        android:background="@color/BlueTile01"
        android:layout_margin="10dp"
        android:textColor="@color/AntiqueWhite" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Feburary"
        android:id="@+id/button3"
        android:layout_row="0"
        android:layout_column="1"

        android:layout_rowWeight="0.25"


        android:layout_columnWeight="0.25"
        android:layout_gravity="fill_horizontal"
        android:background="@color/Fuchsia"
        android:layout_margin="10dp"
        android:textColor="@color/AntiqueWhite" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="March"
        android:id="@+id/button2"
        android:layout_row="0"
        android:layout_column="2"
        android:layout_rowWeight="0.25"

        android:layout_columnWeight="0.25"
        android:layout_gravity="fill_horizontal"
        android:background="@color/ForestGreen"
        android:layout_margin="10dp"
        android:textColor="@color/AntiqueWhite" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="April"
        android:id="@+id/button4"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_rowWeight="0.25"
        android:layout_columnWeight="0.25"
        android:layout_gravity="fill_horizontal"
        android:background="@color/OrangeRed"
        android:layout_margin="10dp"
        android:textColor="@color/AntiqueWhite" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="May"
        android:id="@+id/button5"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_rowWeight="0.25"
        android:layout_columnWeight="0.25"
        android:layout_gravity="fill_horizontal"
        android:background="@color/Chocolate"
        android:layout_margin="10dp"
        android:textColor="@color/AntiqueWhite" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="June"
        android:id="@+id/button6"
        android:layout_row="1"
        android:layout_column="2"
        android:layout_rowWeight="0.25"
        android:layout_columnWeight="0.25"
        android:layout_gravity="fill_horizontal"
        android:background="@color/CornflowerBlue"
        android:layout_margin="10dp"
        android:textColor="@color/AntiqueWhite" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="July"
        android:id="@+id/button7"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_rowWeight="0.25"
        android:layout_columnWeight="0.25"
        android:layout_gravity="fill_horizontal"
        android:background="@color/SlateBlue"
        android:layout_margin="10dp"
        android:textColor="@color/AntiqueWhite" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="August"
        android:id="@+id/button8"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_rowWeight="0.25"
        android:layout_columnWeight="0.25"
        android:layout_gravity="fill_horizontal"
        android:background="@color/Tan"
        android:layout_margin="10dp"
        android:textColor="@color/AntiqueWhite" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="September"
        android:id="@+id/button9"
        android:layout_row="2"
        android:layout_column="2"
        android:layout_rowWeight="0.25"
        android:layout_columnWeight="0.25"
        android:layout_gravity="fill_horizontal"
        android:background="@color/MediumVioletRed"
        android:layout_margin="10dp"
        android:textColor="@color/AntiqueWhite" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="October"
        android:id="@+id/button10"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_rowWeight="0.25"
        android:layout_columnWeight="0.25"
        android:layout_gravity="fill_horizontal"
        android:background="@color/Orange"
        android:layout_margin="10dp"
        android:textColor="@color/AntiqueWhite" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="November"
        android:id="@+id/button11"
        android:layout_row="3"
        android:layout_column="1"
        android:layout_rowWeight="0.25"
        android:layout_columnWeight="0.25"
        android:layout_gravity="fill_horizontal"
        android:background="@color/PaleVioletRed"
        android:layout_margin="10dp"
        android:textColor="@color/AntiqueWhite" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="December"
        android:id="@+id/button12"
        android:layout_row="3"
        android:layout_column="2"
        android:layout_rowWeight="0.25"
        android:layout_columnWeight="0.25"
        android:layout_gravity="fill_horizontal"
        android:background="@color/DarkGreen"
        android:layout_margin="10dp"
        android:textColor="@color/AntiqueWhite" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show All Activities"
        android:id="@+id/button13"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_gravity="fill_horizontal|center_horizontal"
        android:layout_columnSpan="3"
        android:background="@color/Bisque"
        android:layout_margin="10dp" />

</GridLayout>